{
	"name": "eliashaeussler/typo3-badges",
	"description": "A Symfony project that provides endpoints for beautiful TYPO3 badges.",
	"license": "GPL-3.0-or-later",
	"type": "project",
	"authors": [
		{
			"name": "Elias Häußler",
			"email": "elias@haeussler.dev",
			"homepage": "https://haeussler.dev",
			"role": "Maintainer"
		}
	],
	"homepage": "https://typo3-badges.dev",
	"require": {
		"php": "~8.1.0",
		"ext-hash": "*",
		"ext-json": "*",
		"doctrine/annotations": "^1.0",
		"nyholm/psr7": "^1.4",
		"phpdocumentor/reflection-docblock": "^5.3",
		"sensio/framework-extra-bundle": "^6.2",
		"symfony/apache-pack": "^1.0",
		"symfony/asset": "6.1.*",
		"symfony/cache": "6.2.*",
		"symfony/cache-contracts": "^3.0",
		"symfony/console": "6.2.*",
		"symfony/css-selector": "6.1.*",
		"symfony/dependency-injection": "6.1.*",
		"symfony/dotenv": "6.2.*",
		"symfony/flex": "^2",
		"symfony/framework-bundle": "6.1.*",
		"symfony/http-client": "6.2.*",
		"symfony/http-client-contracts": "^3.0",
		"symfony/http-foundation": "6.1.*",
		"symfony/http-kernel": "6.1.*",
		"symfony/property-access": "6.2.*",
		"symfony/property-info": "6.2.*",
		"symfony/routing": "6.1.*",
		"symfony/runtime": "6.2.*",
		"symfony/serializer": "6.2.*",
		"symfony/web-profiler-bundle": "6.1.*",
		"symfony/webpack-encore-bundle": "^1.13",
		"symfony/yaml": "6.2.*"
	},
	"require-dev": {
		"ergebnis/composer-normalize": "^2.21",
		"friendsofphp/php-cs-fixer": "^3.4",
		"phpstan/phpstan": "^1.2",
		"phpstan/phpstan-symfony": "^1.0",
		"phpunit/phpunit": "^9.5",
		"rector/rector": "^0.14.0",
		"symfony/browser-kit": "6.2.*",
		"symfony/phpunit-bridge": "^6.0",
		"symfony/stopwatch": "6.2.*"
	},
	"replace": {
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-iconv": "*",
		"symfony/polyfill-php72": "*",
		"symfony/polyfill-php73": "*",
		"symfony/polyfill-php74": "*",
		"symfony/polyfill-php80": "*",
		"symfony/polyfill-php81": "*"
	},
	"conflict": {
		"symfony/symfony": "*"
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"ergebnis/composer-normalize": true,
			"symfony/flex": true,
			"symfony/runtime": true
		},
		"optimize-autoloader": true,
		"preferred-install": {
			"*": "dist"
		},
		"sort-packages": true
	},
	"extra": {
		"symfony": {
			"allow-contrib": false,
			"require": "6.1.*"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@auto-scripts"
		],
		"post-update-cmd": [
			"@auto-scripts"
		],
		"auto-scripts": {
			"assets:install %PUBLIC_DIR%": "symfony-cmd",
			"cache:clear --no-optional-warmers": "symfony-cmd"
		},
		"lint": [
			"@lint:composer:fix",
			"@lint:php:fix"
		],
		"lint:composer": "@lint:composer:fix --dry-run",
		"lint:composer:fix": "@composer normalize",
		"lint:php": "@lint:php:fix --dry-run",
		"lint:php:fix": "php-cs-fixer fix",
		"migration": "rector process",
		"sca": "phpstan analyse -c phpstan.neon",
		"test": "XDEBUG_MODE=off bin/phpunit",
		"test:coverage": "XDEBUG_MODE=coverage bin/phpunit -c phpunit.coverage.xml"
	}
}
