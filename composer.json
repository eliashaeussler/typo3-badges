{
	"name": "eliashaeussler/typo3-badges",
	"description": "A Symfony project that provides endpoints for beautiful TYPO3 badges.",
	"license": "GPL-3.0-or-later",
	"type": "project",
	"authors": [
		{
			"name": "Elias Häußler",
			"email": "elias@haeussler.dev",
			"homepage": "https://haeussler.dev",
			"role": "Maintainer"
		}
	],
	"homepage": "https://typo3-badges.dev",
	"require": {
		"php": "~8.4.0",
		"ext-hash": "*",
		"ext-json": "*",
		"nyholm/psr7": "1.8.2",
		"sentry/sentry-symfony": "5.8.3",
		"symfony/apache-pack": "1.0.1",
		"symfony/asset": "8.0.4",
		"symfony/cache": "8.0.5",
		"symfony/cache-contracts": "3.6.0",
		"symfony/console": "8.0.4",
		"symfony/css-selector": "8.0.0",
		"symfony/dependency-injection": "8.0.5",
		"symfony/dotenv": "8.0.0",
		"symfony/flex": "2.10.0",
		"symfony/framework-bundle": "8.0.5",
		"symfony/http-client": "8.0.5",
		"symfony/http-client-contracts": "3.6.0",
		"symfony/http-foundation": "8.0.5",
		"symfony/http-kernel": "8.0.5",
		"symfony/routing": "8.0.4",
		"symfony/runtime": "8.0.1",
		"symfony/service-contracts": "3.6.1",
		"symfony/web-link": "8.0.4",
		"symfony/web-profiler-bundle": "8.0.4",
		"symfony/webpack-encore-bundle": "2.4.0",
		"symfony/yaml": "8.0.1",
		"twig/twig": "3.23.0"
	},
	"require-dev": {
		"eliashaeussler/php-cs-fixer-config": "3.1.0",
		"eliashaeussler/phpstan-config": "4.0.0",
		"eliashaeussler/rector-config": "4.0.0",
		"eliashaeussler/version-bumper": "3.1.1",
		"ergebnis/composer-normalize": "2.50.0",
		"phpstan/extension-installer": "1.4.3",
		"phpstan/phpstan-symfony": "2.0.14",
		"phpunit/phpunit": "13.0.5",
		"symfony/browser-kit": "8.0.4",
		"symfony/phpunit-bridge": "8.0.3"
	},
	"replace": {
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-iconv": "*",
		"symfony/polyfill-php72": "*",
		"symfony/polyfill-php73": "*",
		"symfony/polyfill-php74": "*",
		"symfony/polyfill-php80": "*",
		"symfony/polyfill-php81": "*",
		"symfony/polyfill-php82": "*",
		"symfony/polyfill-php83": "*",
		"symfony/polyfill-php84": "*"
	},
	"conflict": {
		"symfony/symfony": "*"
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"eliashaeussler/version-bumper": true,
			"ergebnis/composer-normalize": true,
			"phpstan/extension-installer": true,
			"symfony/flex": true,
			"symfony/runtime": true
		},
		"optimize-autoloader": true,
		"preferred-install": {
			"*": "dist"
		},
		"sort-packages": true
	},
	"extra": {
		"symfony": {
			"allow-contrib": false,
			"require": "~8.0.0"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@auto-scripts"
		],
		"post-update-cmd": [
			"@auto-scripts"
		],
		"auto-scripts": {
			"assets:install %PUBLIC_DIR%": "symfony-cmd",
			"cache:clear --no-optional-warmers": "symfony-cmd"
		},
		"fix": [
			"@fix:composer",
			"@fix:php"
		],
		"fix:composer": "@composer normalize",
		"fix:php": "php-cs-fixer fix",
		"lint": [
			"@lint:composer",
			"@lint:php"
		],
		"lint:composer": "@fix:composer --dry-run",
		"lint:php": "@fix:php --dry-run",
		"migration": "rector process",
		"sca": "phpstan analyse -c phpstan.php",
		"test": "@test:coverage --no-coverage",
		"test:coverage": "phpunit -c phpunit.xml"
	}
}
