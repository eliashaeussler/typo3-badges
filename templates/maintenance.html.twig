{% extends 'base.html.twig' %}

{% block title %}Badge Maintenance in Progress{% endblock %}

{% block bodyClass %}bg-typo3-orange bg-gradient-to-br from-typo3-orange to-red-900 py-10 md:py-20 px-2 selection:bg-typo3-orange selection:text-white flex items-center{% endblock %}

{% block body %}

    <div class="w-full">
